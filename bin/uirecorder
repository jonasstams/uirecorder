#!/usr/bin/env node

var fs = require('fs');
var path = require('path');
var program = require('commander');
var UIRecorder = require('../');

var pkg = require('../package.json');

function map(val) {
    var objMap = {};
    val.split(',').forEach(function(item){
        var arrItem = item.split(/\s*=\s*/);
        objMap[arrItem[0]] = arrItem[1]?arrItem[1]:true;
    });
    return objMap;
}

console.log(("    __  ______   ____                           __         \n\
   / / / /  _/  / __ \\___  _________  _________/ /__  _____\n\
  / / / // /   / /_/ / _ \\/ ___/ __ \\/ ___/ __  / _ \\/ ___/\n\
 / /_/ // /   / _, _/  __/ /__/ /_/ / /  / /_/ /  __/ /    \n\
 \\____/___/  /_/ |_|\\___/\\___/\\____/_/   \\__,_/\\___/_/    v"+pkg.version).green);
console.log('\n------------------------------------------------------------------\n'.green);

program
    .version(pkg.version)
    .option('-l, --lang <en|zh-cn|zh-tw>', 'change language')
    .option('--no-color', 'disable colors')
    .option('-m --mobile', 'mobile mode')
    .option('-d --debug', 'debug mode')
    .option('-h --host <host>', 'set webdriver host')
    .option('-p --port <port>', 'set webdriver port')
    .option('-f --filepath <path>', 'set test filepath')
    .option('-b --browsersize <size>', 'set browser size')
    .option('-c --continuerecord', 'continue recording testfile');

program.command('init')
    .description('Init UIRecorder config file')
    .action(function(){
		UIRecorder.checkUpdate(program.lang);
        UIRecorder.init({
            locale: program.lang,
            mobile: program.mobile,
            debug: program.debug,
            host: program.host,
            port: program.port
        });
    });

program.command('start')
    .description('Start recorder')
    .action(function(){
		UIRecorder.checkUpdate(program.lang);
        UIRecorder.start({
            locale: program.lang,
            cmdFilename: program.args.length === 2 ? program.args[0] : '',
            mobile: program.mobile,
            debug: program.debug,
            raw: program.raw,
            filepath: program.filepath,
            browsersize: program.browsersize,
            continuerecord: program.continuerecord
        });
    });

program.parse(process.argv);

if (!process.argv.slice(2).length) {
    program.outputHelp();
}
